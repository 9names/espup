{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable",
            "cargo": {
                "args": [
                    "build",
                    "--bin=espup",
                    "--package=espup",
                    "--manifest-path=Cargo.toml"
                ],
                "filter": {
                    "name": "espup",
                    "kind": "bin"
                }
            },
            "args": [
                "install"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
